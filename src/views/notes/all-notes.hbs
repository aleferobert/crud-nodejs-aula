{{#each user}}<img src="{{avatar}}" alt="">
<form ref='uploadForm' id='uploadForm' action="/users/user/avatar/{{nome}}" method="POST" encType="multipart/form-data">
    <input type="file" name="avatar"><br>
    <button type="submit" class="btn btn-danger btn-block btn-sm">Alterar Foto</button>
</form>
<form action="/users/user/avatar/{{nome}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                </form>
{{/each}}

<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil" arial-hidden="true"></i></a>
                </h4>
                <p>{{description}}</p>
                <p style="font-size: small;">Criado por: <a href="" data-toggle="tooltip" data-placement="oi"
                        title="<p>Criado em:{{createdAt}}</p><p>Última Modificação: {{updatedAt}}</p>">{{#each
                        createdby}}{{name}}{{/each}}</a></p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}
<div class="card menu ml-auto col-md-3">
    <div class="icon-close">
        <p>Todos os usuários</p>
    </div>
    <!-- Menu -->
    {{#each users }}
    <ul class="list-group list-group-flush">
        <li "list-group-item">
            <a href="/users/user/{{nome}}">{{nome}}</a>
            <img src="{{avatar}}" alt="">
            <form action="/users/addFriend/{{nome}}" method="POST">
                <button type="submit" class="btn btn-primary btn-sm">Adicionar</button>
            </form>
        </li>
    </ul>
    {{/each}}
</div>
<div class="card menu ml-auto col-md-3">
    <div class="icon-close">
        <p>Amigos</p>
    </div>
    <!-- Menu -->
    {{#each friends }}
    <ul class="list-group list-group-flush">
        <li "list-group-item">
            {{nome}}
            <form action="/users/addFriend/{{nome}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
            </form>
        </li>
    </ul>
    {{/each}}
</div>