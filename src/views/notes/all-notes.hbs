<div class="container-fluid">
    {{#each user}}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm">
            <img class="card-img-top" style="max-width: 100px; max-height: 100px;" src="{{avatar}}" alt="avatar">
            <a href="" onclick="javascript:document.getElementById('avatar').style.display = 'block'; return false"><i class="fa fa-pencil"
                                        arial-hidden="true"></i></a>
        </div>
        <div class="col-sm" style="display: none" id="avatar">
            <form ref='uploadForm' id='uploadForm' action="/users/user/avatar/{{nome}}" method="POST"
                encType="multipart/form-data">
                <input type="file" name="avatar"><br>
                <button type="submit" class="btn btn-primary btn-sm">Alterar Foto</button>
            </form>
            <form action="/users/user/avatar/{{nome}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-sm">Apagar Foto</button>
            </form>
            </div>
        </div>
        </div>
    </div>
    {{/each}}
    <div class="row">
        <div class="col-sm">
            <div class="card-group">
                {{#each notes}}
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title d-flex justify-content-between align-items-center">
                                {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil"
                                        arial-hidden="true"></i></a>
                            </h4>
                            <p>{{description}}</p>
                            <p style="font-size: small;">Criado por: <a href="" data-toggle="tooltip"
                                    data-placement="oi"
                                    title="<p>Criado em:{{createdAt}}</p><p>Última Modificação: {{updatedAt}}</p>">{{#each
                                    createdby}}{{name}}{{/each}}</a></p>
                            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div>
            <div class="col-sm">
                <div class="card ">
                    <div class="icon-close">
                        <p><b>Todos os usuários</b></p>
                    </div>

                    <ul class="list-group list-group-flush d-flex justify-content-between align-items-center">
                        {{#each users }}
                        <li class="list-group-item">
                            <div class="row">
                                <a href="/users/user/{{nome}}">{{nome}}</a>
                                <form action="/users/addFriend/{{nome}}" method="POST">
                                    <button type="submit" class="btn btn-primary btn-sm">Adicionar</button>
                                </form>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="card">
                    <div class="icon-close">
                        <p><b>Amigos</b></p>
                    </div>
                    <!-- Menu -->

                    <ul class="list-group list-group-flush d-flex justify-content-between align-items-center">

                        {{#each friends }}

                        <li class="list-group-item">
                            <div class="row">
                                <a href="/users/user/{{nome}}">{{nome}}</a>
                                <form action="/users/addFriend/{{nome}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                                </form>
                            </div>
                        </li>

                        {{/each}}

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>